var vpautocomplete;

jQuery(document).ready(function () {
	
    //toggle the attributes
    jQuery(".property_div").hover(function () 
    {
        jQuery(this).find(".property_excerpt").stop(true,false).slideToggle("slow");
    }, function(){
        jQuery(this).find(".property_excerpt").stop(true, false).slideToggle("slow");
    });

    // The slider being synced must be initialized first
    jQuery('#carousel').flexslider({
        animation: "slide",
        controlNav: false,
        slideshow: false,
        itemWidth: 160,
        itemMargin: 5,
        asNavFor: '#slider'
    });

    jQuery('#slider').flexslider({
        animation: "fade",
        controlNav: false,
        animationLoop: false,
        slideshow: true,
        sync: "#carousel"
    });


    //Google maps
    vpautocomplete = new google.maps.places.Autocomplete(
        (document.getElementById('vp_location')),
        { types: ['geocode'] });

    //set the active tab for list and map
    if (jQuery("input:hidden[name=vp_view]").val() == 'map') {
        jQuery("#viewMap").addClass("active");
        jQuery('#orderBy li[data-group="view"]').hide();
        jQuery("#vp_order_message").hide();
    } else {
        jQuery("#viewList").addClass("active");
    }

    jQuery("#orderBy li[data-value=\"" + jQuery("input:hidden[name=vp_orderby]").val() + "\"]").addClass("active");

    jQuery('#viewMap').click(function () {
        jQuery("input:hidden[name=vp_view]").val("map");
        jQuery("#property_form").submit();
    });

    jQuery('#viewList').click(function () {
        jQuery("input:hidden[name=vp_view]").val("list");
        jQuery("#property_form").submit();
    });

    //set active sortorder using the form values
    jQuery("#orderBy li[data-value=\"" + jQuery("input:hidden[name=vp_orderby]").val() + "\"]").addClass("active");

    jQuery('#orderBy li[data-group="order"]').click(function () {
        var orderby = jQuery(this).attr("data-value");
        jQuery("input:hidden[name=vp_orderby]").val(orderby);
        jQuery("#property_form").submit();
    });

    //paging
    jQuery(".properties-page").click(function () {
        jQuery("input:hidden[name=vp_page]").val(jQuery(this).attr("data-id"));
        jQuery("#property_form").submit();
        return false;
    });

});